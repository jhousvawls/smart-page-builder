{
    "name": "jhousvawls/smart-page-builder",
    "description": "AI-powered WordPress plugin for intelligent content generation",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "John Housholder",
            "email": "john.housholder@example.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "SmartPageBuilder\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartPageBuilder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress --ignore=vendor/,node_modules/,tests/ .",
        "phpcbf": "phpcbf --standard=WordPress --ignore=vendor/,node_modules/,tests/ .",
        "phpcs-check": "phpcs --standard=WordPress --report=summary --ignore=vendor/,node_modules/,tests/ .",
        "lint": [
            "@phpcs-check"
        ],
        "fix": [
            "@phpcbf"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
