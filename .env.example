# Smart Page Builder Configuration
# Copy this file to .env and update with your actual values

# Debug Settings
SPB_DEBUG=true
SPB_LOG_LEVEL=debug

# WordPress Debug Settings (for development)
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=true

# AI Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Plugin Settings
SPB_CACHE_ENABLED=true
SPB_CACHE_DURATION=3600
SPB_MIN_USER_ROLE=author
SPB_CONFIDENCE_THRESHOLD=0.6
SPB_MAX_CONTENT_LENGTH=2000
SPB_DATA_RETENTION_DAYS=30

# Rate Limiting
SPB_RATE_LIMIT_REQUESTS=100
SPB_RATE_LIMIT_WINDOW=3600

# Database Configuration (for testing)
DB_NAME=wordpress_test
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PREFIX=wp_

# Test Environment
WP_TESTS_DIR=/tmp/wordpress-tests-lib
WP_CORE_DIR=/tmp/wordpress/

# Security
SPB_ENCRYPTION_KEY=your_custom_encryption_key_here
SPB_API_TIMEOUT=30

# Performance
SPB_MEMORY_LIMIT=512M
SPB_MAX_EXECUTION_TIME=300

# Content Generation
SPB_DEFAULT_TEMPLATE=how-to-guide
SPB_AUTO_GENERATE=true
SPB_CONTENT_MODERATION=false

# Analytics
SPB_ANALYTICS_ENABLED=true
SPB_AB_TESTING_ENABLED=true

# Theme Integration
SPB_THEME_INTEGRATION=diy-home-improvement
SPB_PLACEHOLDER_AUTO_LOAD=true
